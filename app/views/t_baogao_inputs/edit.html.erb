<div class="call-board-frame">
  <h3>编辑：</h3>
  <%= simple_form_for @t_baogao_input do |f| %>

    <%= f.input :content, as: :ckeditor,label: "文字部分" %>

    <label> 附件图(可一次选择多个文件)</label>

    <%= f.file_field :baogao_attachment,multiple: true, as: :file %><br>
    <%= f.submit "提交",:data => {:disable_with => "提交中..."} %>
  <% end %>
  <br>
  <p>
    <% if @t_baogao_input.baogao_attachment.present? %>
      <label>当前截图预览：</label><br>
      <% n = @t_baogao_input.baogao_attachment.size %>
      <% (0..(n-1)).each do |i| %>
        <%= image_tag("http://10.64.2.108:8033"+@t_baogao_input.baogao_attachment[i].url,width: 200) %>
      <% end %>

    <% end %>
  </p>
</div>
