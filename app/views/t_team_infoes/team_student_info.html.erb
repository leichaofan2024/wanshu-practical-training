                <% n = @station.image.count %>
                <% (0..(n-1)).each do |i| %>
                  <div class="teams_station_picture">
                    <%= image_tag("http://10.64.2.108:8033"+@station.image[i].thumb.url)%>
                    <div class="dropdown-content">
                      <%= image_tag("http://10.64.2.108:8033"+@station.image[i].huge.url)%>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </td>
          </div>
        </tr>
        <tr>
          <div class="teams-uploader-file">
