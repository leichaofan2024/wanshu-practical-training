<div class="call-board-frame">
  <div class="pull-right">
    <%= link_to("发布消息>>", new_call_board_path, :class => "btn btn-primary") %>
  </div>
  <table class="table table-border">
    <thead>
      <tr>
        <th>序号</th>
        <th>标题</th>
        <th>简介</th>
        <th>发布日期</th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @call_boards.each do |c| %>
      <% i= i+1%>
      <tr>
        <td><%= i %></td>
        <td><%= link_to(c.name, call_board_path(c)) %></td>
        <td><%= c.content %></td>
        <td><%= c.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
