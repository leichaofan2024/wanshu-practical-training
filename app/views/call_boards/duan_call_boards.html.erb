<div class="call-board-frame">
<% @call_boards.each do |duan,call_boards| %>
  <p style="font-size:20px;color:red;"><%= duan %></p>
  <table class="table table-border">
    <thead>
      <tr>
        <th>序号</th>
        <th>标题</th>
        <th>发布日期</th>
        <th>公告来源</th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% call_boards.each do |c| %>

          <% i= i+1%>
          <tr>
            <td width= "20%"><%= i %></td>
            <td width= "40%"><%= link_to(c.name, call_board_path(c)) %></td>
            <td width= "20%"><%= c.created_at.strftime("%Y/%m/%d %I:%M %p") %></td>
            <td width= "20%"><%= c.user.orgnize%></td>
          </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
</div>
