
<div class="pie_duan_frame">

  <div class="clear">
    <a href="/">首页</a> > <a href="/t_duan_infoes/duan_student_info">各站段参考情况</a> > <a href="/t_station_infoes/station_student_info?name=<%= @duan.F_name%>"><%= @duan.F_name %></a> > <a href="/t_team_infoes/team_student_info?duan_name=<%=@duan.F_name%>&name=<%=@station.F_name%>"><%= @station.F_name%></a> > <a href="#">hh</a>
  </div>

  <table class="table table-border">
    <thead>
      <tr>
        <th>序号</th>
        <th>姓名</th>
        <th>身份证号</th>
        <th>考试地点</th>
        <th>考试时间</th>
        <th>得分</th>
        <th>考试详情</th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @records.each do |r| %>
      <% i = i+1 %>
      <tr>
        <td><%= i %></td>
        <td>
            <%= r.t_user_info.F_name %>
        </td>
        <td>
            <%= r.t_user_info.F_id %>
        </td>

        <td>
            <%= r.t_duan_info.F_name %> /
            <%= r.t_station_info.F_name %> /
            <% if r.t_team_info.present? %>
            <%= r.t_team_info.F_name %>
            <% end %>
        </td>
        <td><%= r.F_time %></td>
        <td><%= r.F_score %></td>
        <td>
          <%= link_to("考试详情", record_details_t_record_detail_infoes_path(:duan_name => params[:duan_name],:name => params[:name],:team_name=> params[:team_name],:user_name => params[:user_name],:user_id => params[:user_id],:record_uuid=> r.F_uuid) )%> ／
          <%= link_to("录像",  )%> /
          <%= link_to("", t_record_info_path(r,:duan_name => params[:duan_name],:name => params[:name],:team_name=> params[:team_name]),method: :delete,:data => {confirm: "你确定要删除吗？"},class: "fa fa-trash" )%>

        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
