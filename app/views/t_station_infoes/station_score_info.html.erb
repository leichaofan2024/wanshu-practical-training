<div class= "pie_duan_frame">
  <div class="clear">
    <% if current_user.permission == 1%>
      <a href="/">首页</a> > <a href="/t_duan_infoes/duan_score_info">各站段参考成绩</a> > <%= @duan.F_name%>
    <% elsif current_user.permission == 2 %>
      <a href="/">首页</a> >  <%= @duan.F_name%>
    <% end %>
  </div>
  <div class="">
    <%= form_tag station_score_info_t_station_infoes_path, method: :get do %>
    <%= text_field_tag 'search[date_from]', @date_from %>
    <%= text_field_tag 'search[date_to]', @date_to %>
    <%= hidden_field_tag :duan_name , params[:duan_name]%>
    <%= submit_tag "搜索" %>
    <% end %>
  </div>
  <script src="/assets/echarts.min.js"></script>
    <div id="main" style="width: 1000px;height:500px;margin: 40px auto 0;"></div>
     <script type="text/javascript">
      // 基于准备好的dom，初始化echarts实例
      var myChart = echarts.init(document.getElementById('main'));

      // 指定图表的配置项和数据
      var option = {
              title: {
                  text: '<%= @duan.F_name %>考试成绩分析'
              },
              tooltip : {
                  trigger: 'axis',
                  axisPointer : {            // 坐标轴指示器，坐标轴触发有效
                      type : 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                  }
              },
              legend: {
                  data: ['90分以上', '80-90分','60-80分','60分以下']
              },
              grid: {
                  left: '3%',
                  right: '4%',
                  y2:120,
                  containLabel: true
              },
              yAxis:  {
                  type: 'value'
              },
              xAxis: {
                  type: 'category',
                  splitLine: {
                    show: false
                },
                axisTick: {
                    show: false
                },
                splitArea: {
                    show: false
                },
                axisLabel: {
                    interval: 0,
                    rotate: 45,
                    show: true,
                    splitNumber: 15,
                    textStyle: {
                        fontFamily: "微软雅黑",
                        fontSize: 14
                    }
                  },
                  data: gon.station_key
              },
              series: [
                  {
                      name: '90分以上',
                      type: 'bar',
                      stack: '总分',
                      label: {
                          normal: {
                              show: true,
                              position: 'insideRight'
                          }
                      },
                      data: gon.ninefen
                  },
                  {
                      name: '80-90分',
                      type: 'bar',
                      stack: '总分',
                      label: {
                          normal: {
                              show: true,
                              position: 'insideRight'
                          }
                      },
                      data: gon.ef
                  },
                  {
                      name: '60-80分',
                      type: 'bar',
                      stack: '总分',
                      label: {
                          normal: {
                              show: true,
                              position: 'insideRight'
                          }
                      },
                      data: gon.sf
                  },
                  {
                      name: '60分以下',
                      type: 'bar',
                      stack: '总分',
                      label: {
                          normal: {
                              show: true,
                              position: 'insideRight'
                          }
                      },
                      data: gon.sb
                  }
              ]
          };


              // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
        <% if params[:search].present? %>
        function GetUrlPara(){
          var url = document.location.toString();
          var attrUrl = url.split("?");
          var para = attrUrl[1];
          return para;
        };
        myChart.on('click', function(params){
          window.location.assign('/t_team_infoes/team_score_info?station_name=' + params.name + '&' + GetUrlPara())
        });
        <% else %>
        myChart.on('click', function (params) {
          window.location.assign('/t_team_infoes/team_score_info?duan_name=<%= params[:duan_name] %>&station_name=' + params.name);
        });
        <% end %>
  </script>
</div>
