
<div class="root-search-frame">
  <div class="root-search">
    <b>搜索：</b>
    <div style="display:inline-block;">
      <%= form_for t_station_infoes_path do |f| %>
        <%= f.text_field  :date,:placeholder => "输入搜索内容", :style => "height:25px;font-size:10px;"%>
      <% end %>
    </div>

  </div>

  <div class="root-search-time1">
    <b>时间：</b>
    <div style="display:inline-block;">
      <%= form_for t_station_infoes_path do |f| %>
        <%= f.text_field  :date, :placeholder => "开始日期...",:style => "height:25px;font-size:10px;"%>
      <% end %>
    </div>

  </div>
  ~
  <div class="root-search-time2">
    <%= form_for t_station_infoes_path do |f| %>
      <%= f.text_field  :date, :placeholder => "截止日期...",:style => "height:25px;font-size:10px;"%>
    <% end %>
  </div>
  <button type="button" name="button">确定</button>
</div>
<div class="root-card-frame">
  <div class="root-card">
    <div class="root-card-block">
      <%= link_to duan_ck_path do %>
        <strong>站段总数：<%= duan %> </strong><br>
        <strong>实考站段：<%= duan_ck_count %></strong>
      <% end %>
    </div>
    <div class="root-card-block">
      <%= link_to station_ck_path do %>
        <strong>车站总数：<%= station%> </strong><br>
        <strong>实考车站：<%= station_ck_count %></strong>
      <% end %>
    </div>
    <div class="root-card-block">
      <%= link_to team_ck_path do %>
        <strong>班组总数：<%= team %> </strong><br>
        <strong>实考班组：<%= team_ck_count %></strong>
      <% end %>
    </div>
    <div class="root-card-block">
      <%= link_to student_ck_path do %>
        <strong>实训人数：<%= student %> </strong><br>
        <strong>实考人数：<%= student_ck_count %></strong>
      <% end %>
    </div>
    <div class="root-card-block">
      <%= link_to program_ck_path do %>
        <strong>考点总数：<%= TProgramInfo.count %> </strong><br>
        <strong>覆盖考点：<%= program_ck_count %></strong>
      <% end %>
    </div>
  </div>

</div>


