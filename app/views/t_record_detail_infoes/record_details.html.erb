<div class="pie_duan_frame">

  <div class="clear">
    <% if current_user.permission == 1 %>
      <a href="/">首页</a> > <a href="/t_duan_infoes/duan_student_info">各站段参考情况</a> > <a href="/t_station_infoes/station_student_info?duan_name=<%= @duan.F_name%>"><%= @duan.F_name %></a> > <a href="/t_team_infoes/team_student_info?duan_name=<%=@duan.F_name%>&station_name=<%=@station.F_name%>"><%= @station.F_name%></a> >
      <a href="/t_record_infoes/student_records?duan_name=<%=@duan.F_name%>&station_name=<%=@station.F_name%>&team_name=
        <% if @team.present? %>
          <%=@team.F_name%>
        <% end %>
        &user_id=<%=@students.first.F_id %>&user_name=<%=@students.first.F_name%>">
        <% if @team.present? %>
          <%=@team.F_name %>:<%=@students.first.F_name%>
        <% else %>
          <%=@students.first.F_name%>
        <% end %>
      </a>
    <% elsif current_user.permission == 2 %>
      <a href="/">首页</a> > <a href="/t_station_infoes/station_student_info?duan_name=<%= @duan.F_name%>"><%= @duan.F_name %></a> > <a href="/t_team_infoes/team_student_info?duan_name=<%=@duan.F_name%>&station_name=<%=@station.F_name%>"><%= @station.F_name%></a> >
      <a href="/t_record_infoes/student_records?duan_name=<%=@duan.F_name%>&station_name=<%=@station.F_name%>&team_name=
        <% if @team.present? %>
          <%=@team.F_name%>
        <% end %>
        &user_id=<%=@students.first.F_id %>&user_name=<%=@students.first.F_name%>">
        <% if @team.present? %>
          <%=@team.F_name %>:<%=@students.first.F_name%>
        <% else %>
          <%=@students.first.F_name%>
        <% end %>
      </a>
    <% elsif current_user.permission == 3 %>
      <a href="/">首页</a> > <a href="/t_team_infoes/team_student_info?duan_name=<%=@duan.F_name%>&station_name=<%=@station.F_name%>"><%= @station.F_name%></a> >
      <a href="/t_record_infoes/student_records?duan_name=<%=@duan.F_name%>&station_name=<%=@station.F_name%>&team_name=
        <% if @team.present? %>
          <%=@team.F_name%>
        <% end %>
        &user_id=<%=@students.first.F_id %>&user_name=<%=@students.first.F_name%>">
        <% if @team.present? %>
          <%=@team.F_name %>:<%=@students.first.F_name%>
        <% else %>
          <%=@students.first.F_name%>
        <% end %>
      </a>
    <% end %>
  </div>

  <table class="table table-border">
    <thead>
      <tr>
        <th>序号</th>
        <th>老师</th>
        <th>考核项点</th>
        <th>扣分项点</th>
        <th>得分</th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @t_record_detail_infoes.each do |r| %>
      <% i = i+1 %>
      <tr>
        <td><%= i %></td>
        <td>
          <% if @teacher.present? %>
            <%= @teacher.F_name %>
          <% else %>
            <%= "无教师信息"%>
          <% end %>
        </td>
        <td>
            <%= r.t_program_info.F_name %>
        </td>

        <td>
            <% r.t_detail_reason_infoes.each do |reason| %>
              <%= reason.t_reason_info.F_name %> 扣分：<%= reason.F_score %><br>
            <% end %>
        </td>
        <td><%= r.F_score %></td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>
