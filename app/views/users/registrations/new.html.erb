<div class="loginpage-frame">
  <h2>注册账户</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :role, required: true,label:"用户名", autofocus:true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),label: "密码" %>
      <%= f.input :password_confirmation, required: true ,label: "重新确认密码"%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "注册" %>
    </div>
  <% end %>

</div>
